{
    "type": "project",
    "require-dev": {
        "phpunit/phpunit": "^11",
        "phpstan/phpstan": "^2.0",
        "squizlabs/php_codesniffer": "^3.11"
    },
    "autoload": {
        "psr-4": {
            "Src\\": "Src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse",
        "phpcs": "phpcs --standard=PSR12 Src/"
    }
}
